<h2>Welecome</h2>
<%=form_for @user ,url: {controller: "auth",action: "auth_user"} do |f| %>
<div class='row'>
	<%=f.label :email %>
	<%=f.text_field :email %>
</div>
<div class='row'>
	<%=f.label  :password %>
	<%=f.password_field :password %>
</div>
<%=f.submit value: 'Login' ,class: 'button' %>
<% end %>